<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Crime data Bhopal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="../static/style.css">

    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Genos&family=Noto+Serif:wght@700&family=Philosopher&display=swap"
        rel="stylesheet">


    <style>
        .selector_bg {
            background-color: #282c31;
        }

        .selector_bg:hover {
            background-color: rgb(0, 128, 255);
        }
    </style>

</head>

<body>
    <!-- Navbar -->
    {{>loginheader}}

    <!-- Right canvas (User Account) -->
    {{>rightcanvas}}

    <!-- Admin Login Modal -->
    <div class="modal fade" id="adminloginModal" tabindex="-1" aria-labelledby="adminloginModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="border: 2px solid #394dff;">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="adminloginModalLabel">Login</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <img class="mb-4" src="/static/img/logo/logo.png" alt="" width="72" height="57">

                        <div class="form-floating my-3">
                            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput">Admin ID</label>
                        </div>
                        <div class="form-floating my-3">
                            <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                        </div>
                        <button class="w-10 btn btn-lg mb-3 forgot-pass" type="button">Forgot Password</button>
                        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Year Dropdown List -->
    <div class="container dropdown my-8">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Select Year
        </button>
        <ul class="dropdown-menu bg-dark">
            <li><a class="dropdown-item selector_bg" href="#">2023</a></li>
            <li><a class="dropdown-item selector_bg" href="../views/crimeChart3">2022</a></li>
            <li><a class="dropdown-item selector_bg" href="../views/crimeChart2">2021</a></li>
            <li><a class="dropdown-item selector_bg" href="../views/crimeChart">2020</a></li>
        </ul>
    </div>

    <!-- Dynamic Crime Chart -->
    <div class="container d-flex align-items-center justify-content-center my-2">
        <canvas id="myChart" width="700" height="700" aria-label="chart" role="img"></canvas>
    </div>

    <!-- our team member -->
    {{>team}}

    {{!-- footer --}}

    {{>footer}}

    {{!-- javascript --}}
    <script src="/static/chart.js"></script>
    <script src="/static/custom4.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>