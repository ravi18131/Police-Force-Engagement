                <div class="input-group has-validation">
                    <span class="input-group-text input_design" id="inputGroupPrepend">@</span>
                    <input type="text" class="form-control input_design" name="feeduseremail" id="username"
                        aria-describedby="inputGroupPrepend" required>
                    <div class="invalid-feedback">
                        Please Enter Your Username.
                    </div>
                </div>
            </div>


