<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/style.css">
    <link rel="stylesheet" href="/static//tableStyle.css">

    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Genos&family=Noto+Serif:wght@700&family=Philosopher&display=swap"
        rel="stylesheet">

</head>

<body>
    <!-- Navbar -->
    {{>loginheader}}

    <!-- Right canvas (User Account) -->
    {{>rightcanvas}}

    <!-- Admin Login Modal -->
    <div class="modal fade" id="adminloginModal" tabindex="-1" aria-labelledby="adminloginModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="border: 2px solid #394dff;">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="adminloginModalLabel">Login</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/adminlogin" method="post">
                        <img class="mb-4" src="/static/img/logo/logo.png" alt="" width="72" height="57">

                        <div class="form-floating my-3">
                            <input type="email" name="adminemail" class="form-control" id="floatingInput"
                                placeholder="name@example.com">
                            <label for="floatingInput" name="adminemail">Admin ID</label>
                        </div>
                        <div class="form-floating my-3">
                            <input type="password" class="form-control" name="adminpassword" id="floatingPassword"
                                placeholder="Password">
                            <label for="floatingPassword" name="adminpassword">Password</label>
                        </div>
                        <button class="w-10 btn btn-lg mb-3 forgot-pass" type="button">Forgot Password</button>
                        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- User Data -->
    <div class="container my-7">
        <h1>Your Data</h1>
        <table class="table table-secondary table-hover my-5">
            <thead>
                <tr>
                    <th scope="col" colspan="8" class="py-3">Details</th>
                </tr>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">User ID</th>
                    <th scope="col">Mobile Number</th>
                    <th scope="col">Email</th>
                    <th scope="col">Your Assigned Station</th>
                    <th scope="col">Rank</th>
                    <th scope="col">Joining Date</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.city}}</td>
                    <td>{{this.State}}</td>
                    <td>{{this.Allotment}}</td>
                    <td>{{this.Transfers}}</td>
                    <td>{{this.promotion}}</td>
                    <td>{{this.concern}}</td>
                    {{!-- <td>{{this.Gender}}</td>
                    <td>{{this.Status}}</td> --}}
                    {{!-- <td>{{this.Achievement}}</td>
                    <td>{{this.FirstName}}</td>
                    <td>{{this.LastName}}</td>
                    <td>{{this.PoliceStation}}</td>
                    <td>{{this.Rank}}</td>
                    <td>{{this.Suggetion}}</td>
                    <td>{{this.UserId}}</td>
                    <td>{{this.ZipCode}}</td>
                    <td>{{this.workStatus}}</td>
                    <td>{{this.EmailId}}</td>
                    <td>{{this.AssignedWork}}</td> --}}
                </tr>
                {{/each}}
            </tbody>
            <tr>
                <td>first name</td>
                <td>last name</td>
                <td>user id</td>
                <td>mobile number</td>
                <td>email</td>
                <td>assigned station</td>
                <td>rank</td>
                <td>joining data</td>
            </tr>
            </tbody>
        </table>
    </div>


    <!-- Achievements -->
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="/static/img/icon/account.svg" alt="" width="100">
        <h1 class="display-5 fw-bold text-body-emphasis">Achievements</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">description about his achievements</p>
        </div>
    </div>
    <!-- Promotions -->
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold text-body-emphasis">Promotions</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">description about his promotions</p>
        </div>
    </div>
    <!-- Transfers -->
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold text-body-emphasis">Transfers</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">description about his transfers</p>
        </div>
    </div>

    <!-- our team member -->

    {{>team}}

    {{!-- footer --}}

    {{>footer}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>